<Window x:Class="myCalculatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myCalculatorApp"
        mc:Ignorable="d"
        Title="Calculator" Height="650" Width="400"
        Background="#1E1E1E"
        ResizeMode="NoResize">

    <!-- Window Resources - Styles defined here -->
    <Window.Resources>
        <!-- Number Button Style -->
        <Style x:Key="NumberButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#4A4A4F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Operator Button Style (Orange accent) -->
        <Style x:Key="OperatorButtonStyle" TargetType="Button" BasedOn="{StaticResource NumberButtonStyle}">
            <Setter Property="Background" Value="#FF9500"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFB84D"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#CC7700"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Function Button Style (C, +/-, etc) -->
        <Style x:Key="FunctionButtonStyle" TargetType="Button" BasedOn="{StaticResource NumberButtonStyle}">
            <Setter Property="Background" Value="#505050"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#606060"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#707070"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Memory Button Style (Blue accent) -->
        <Style x:Key="MemoryButtonStyle" TargetType="Button" BasedOn="{StaticResource NumberButtonStyle}">
            <Setter Property="Background" Value="#0D47A1"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="20"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0A3D8F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Equals Button Style (Green accent) -->
        <Style x:Key="EqualsButtonStyle" TargetType="Button" BasedOn="{StaticResource NumberButtonStyle}">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="FontSize" Value="32"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#43A047"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1B5E20"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display -->
        <Border Grid.Row="0" 
                Background="#252526" 
                CornerRadius="12" 
                Margin="15,15,15,10"
                BorderThickness="1"
                BorderBrush="#3E3E42">
            <TextBox x:Name="Display" 
                     FontSize="48"
                     FontWeight="Light"
                     FontFamily="Segoe UI"
                     TextAlignment="Right" 
                     IsReadOnly="True" 
                     Background="Transparent"
                     Foreground="#FFFFFF"
                     BorderThickness="0"
                     Padding="15"
                     VerticalContentAlignment="Center"
                     Text="0"/>
        </Border>

        <!-- Buttons Grid -->
        <Grid Grid.Row="1" Margin="15,10,15,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Memory Buttons Row -->
            <Button Content="MC" Click="McButton_Click" 
                    Grid.Row="0" Grid.Column="0" 
                    Style="{StaticResource MemoryButtonStyle}"/>
            <Button Content="M+" Click="MplusButton_Click" 
                    Grid.Row="0" Grid.Column="1" 
                    Style="{StaticResource MemoryButtonStyle}"/>
            <Button Content="M-" Click="MminusButton_Click" 
                    Grid.Row="0" Grid.Column="2" 
                    Style="{StaticResource MemoryButtonStyle}"/>
            <Button Content="MR" Click="MrButton_Click" 
                    Grid.Row="0" Grid.Column="3" 
                    Style="{StaticResource MemoryButtonStyle}"/>

            <!-- Row 1 -->
            <Button Content="C" Click="ClearButton_Click" 
                    Grid.Row="1" Grid.Column="0" 
                    Style="{StaticResource FunctionButtonStyle}"/>
            <Button Content="+/-" Click="ToggleSignButton_Click" 
                    Grid.Row="1" Grid.Column="1" 
                    Style="{StaticResource FunctionButtonStyle}"/>
            <Button Content="÷" Click="OperandButton_Click" 
                    Grid.Row="1" Grid.Column="2" 
                    Style="{StaticResource OperatorButtonStyle}"/>
            <Button Content="×" Click="OperandButton_Click" 
                    Grid.Row="1" Grid.Column="3" 
                    Style="{StaticResource OperatorButtonStyle}"/>

            <!-- Row 2 - Numbers 7,8,9 -->
            <Button Content="7" Click="NumberButton_Click" 
                    Grid.Row="2" Grid.Column="0" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="8" Click="NumberButton_Click" 
                    Grid.Row="2" Grid.Column="1" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="9" Click="NumberButton_Click" 
                    Grid.Row="2" Grid.Column="2" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="-" Click="OperandButton_Click" 
                    Grid.Row="2" Grid.Column="3" 
                    Style="{StaticResource OperatorButtonStyle}"/>

            <!-- Row 3 - Numbers 4,5,6 -->
            <Button Content="4" Click="NumberButton_Click" 
                    Grid.Row="3" Grid.Column="0" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="5" Click="NumberButton_Click" 
                    Grid.Row="3" Grid.Column="1" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="6" Click="NumberButton_Click" 
                    Grid.Row="3" Grid.Column="2" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="+" Click="OperandButton_Click" 
                    Grid.Row="3" Grid.Column="3" 
                    Style="{StaticResource OperatorButtonStyle}"/>

            <!-- Row 4 - Numbers 1,2,3 -->
            <Button Content="1" Click="NumberButton_Click" 
                    Grid.Row="4" Grid.Column="0" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="2" Click="NumberButton_Click" 
                    Grid.Row="4" Grid.Column="1" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="3" Click="NumberButton_Click" 
                    Grid.Row="4" Grid.Column="2" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="=" Click="EqualButton_Click" 
                    Grid.Row="4" Grid.Column="3" Grid.RowSpan="2" 
                    Style="{StaticResource EqualsButtonStyle}"/>

            <!-- Row 5 - Bottom row -->
            <Button Content="⌫" Click="BackSpaceButton_Click" 
                    Grid.Row="5" Grid.Column="0" 
                    Style="{StaticResource FunctionButtonStyle}"/>
            <Button Content="0" Click="NumberButton_Click" 
                    Grid.Row="5" Grid.Column="1" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="." Click="DecimalButton_Click" 
                    Grid.Row="5" Grid.Column="2" 
                    Style="{StaticResource NumberButtonStyle}"/>
        </Grid>
    </Grid>
</Window>