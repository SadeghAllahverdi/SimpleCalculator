<Window x:Class="myCalculatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myCalculatorApp"
        mc:Ignorable="d"
        Title="Calculator" Height="650" Width="400"
        Background="#F0F0F0"
        ResizeMode="NoResize">

    <!-- Window Resources - Simplified Styles -->
    <Window.Resources>
        <!-- Number Button Style -->
        <Style x:Key="NumberButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#999999"/>
            <Setter Property="Margin" Value="3"/>
        </Style>

        <!-- Operator Button Style -->
        <Style x:Key="OperatorButtonStyle" TargetType="Button" BasedOn="{StaticResource NumberButtonStyle}">
            <Setter Property="Background" Value="#FFB84D"/>
            <Setter Property="Foreground" Value="#000000"/>
        </Style>

        <!-- Function Button Style -->
        <Style x:Key="FunctionButtonStyle" TargetType="Button" BasedOn="{StaticResource NumberButtonStyle}">
            <Setter Property="Background" Value="#D0D0D0"/>
        </Style>

        <!-- Memory Button Style -->
        <Style x:Key="MemoryButtonStyle" TargetType="Button" BasedOn="{StaticResource NumberButtonStyle}">
            <Setter Property="Background" Value="#ADD8E6"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>

        <!-- Equals Button Style -->
        <Style x:Key="EqualsButtonStyle" TargetType="Button" BasedOn="{StaticResource NumberButtonStyle}">
            <Setter Property="Background" Value="#90EE90"/>
            <Setter Property="FontSize" Value="28"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display -->
        <Border Grid.Row="0" 
                Background="#FFFFFF" 
                Margin="10"
                BorderThickness="2"
                BorderBrush="#999999">
            <TextBox x:Name="Display" 
                     FontSize="48"
                     FontFamily="Segoe UI"
                     TextAlignment="Right" 
                     IsReadOnly="True" 
                     Background="Transparent"
                     Foreground="#000000"
                     BorderThickness="0"
                     Padding="10"
                     VerticalContentAlignment="Center"
                     Text="0"/>
        </Border>

        <!-- Buttons Grid -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Memory Buttons Row -->
            <Button Content="MC" Click="McButton_Click" 
                    Grid.Row="0" Grid.Column="0" 
                    Style="{StaticResource MemoryButtonStyle}"/>
            <Button Content="M+" Click="MplusButton_Click" 
                    Grid.Row="0" Grid.Column="1" 
                    Style="{StaticResource MemoryButtonStyle}"/>
            <Button Content="M-" Click="MminusButton_Click" 
                    Grid.Row="0" Grid.Column="2" 
                    Style="{StaticResource MemoryButtonStyle}"/>
            <Button Content="MR" Click="MrButton_Click" 
                    Grid.Row="0" Grid.Column="3" 
                    Style="{StaticResource MemoryButtonStyle}"/>

            <!-- Row 1 -->
            <Button Content="C" Click="ClearButton_Click" 
                    Grid.Row="1" Grid.Column="0" 
                    Style="{StaticResource FunctionButtonStyle}"/>
            <Button Content="+/-" Click="ToggleSignButton_Click" 
                    Grid.Row="1" Grid.Column="1" 
                    Style="{StaticResource FunctionButtonStyle}"/>
            <Button Content="÷" Click="OperandButton_Click" 
                    Grid.Row="1" Grid.Column="2" 
                    Style="{StaticResource OperatorButtonStyle}"/>
            <Button Content="×" Click="OperandButton_Click" 
                    Grid.Row="1" Grid.Column="3" 
                    Style="{StaticResource OperatorButtonStyle}"/>

            <!-- Row 2 - Numbers 7,8,9 -->
            <Button Content="7" Click="NumberButton_Click" 
                    Grid.Row="2" Grid.Column="0" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="8" Click="NumberButton_Click" 
                    Grid.Row="2" Grid.Column="1" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="9" Click="NumberButton_Click" 
                    Grid.Row="2" Grid.Column="2" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="-" Click="OperandButton_Click" 
                    Grid.Row="2" Grid.Column="3" 
                    Style="{StaticResource OperatorButtonStyle}"/>

            <!-- Row 3 - Numbers 4,5,6 -->
            <Button Content="4" Click="NumberButton_Click" 
                    Grid.Row="3" Grid.Column="0" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="5" Click="NumberButton_Click" 
                    Grid.Row="3" Grid.Column="1" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="6" Click="NumberButton_Click" 
                    Grid.Row="3" Grid.Column="2" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="+" Click="OperandButton_Click" 
                    Grid.Row="3" Grid.Column="3" 
                    Style="{StaticResource OperatorButtonStyle}"/>

            <!-- Row 4 - Numbers 1,2,3 -->
            <Button Content="1" Click="NumberButton_Click" 
                    Grid.Row="4" Grid.Column="0" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="2" Click="NumberButton_Click" 
                    Grid.Row="4" Grid.Column="1" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="3" Click="NumberButton_Click" 
                    Grid.Row="4" Grid.Column="2" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="=" Click="EqualButton_Click" 
                    Grid.Row="4" Grid.Column="3" Grid.RowSpan="2" 
                    Style="{StaticResource EqualsButtonStyle}"/>

            <!-- Row 5 - Bottom row -->
            <Button Content="⌫" Click="BackSpaceButton_Click" 
                    Grid.Row="5" Grid.Column="0" 
                    Style="{StaticResource FunctionButtonStyle}"/>
            <Button Content="0" Click="NumberButton_Click" 
                    Grid.Row="5" Grid.Column="1" 
                    Style="{StaticResource NumberButtonStyle}"/>
            <Button Content="." Click="DecimalButton_Click" 
                    Grid.Row="5" Grid.Column="2" 
                    Style="{StaticResource NumberButtonStyle}"/>
        </Grid>
    </Grid>
</Window>